
# output folder
out = build/bin_${variation}

includedirs = test1 test2

# build all

build $out/test1/*.obj: auto test1/*.c
build $out/test1.lib: auto $out/test1/*.obj

build $out/test2/*.obj: auto test2/*.cpp
