cflags = /nologo /showIncludes
ldflags = /nologo

rule cc
  command = cl $cflags -c $in /Fo$out
  description = compile

rule link
  command = cl $in /link $ldflags /out:$out
  description = link

build test_mask_result.exe:link test_mask_a.obj test_mask_b.obj
build test_mask_b.obj:cc test_mask_b.cpp
build test_mask_a.obj:cc test_mask_a.cpp

